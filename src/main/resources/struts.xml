<!DOCTYPE struts PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
  "https://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <constant name="struts.devMode" value="false"/>
  <constant name="struts.action.extension" value="action,,"/>

  <package name="default" namespace="/" extends="struts-default">
    <action name="checkout" class="actions.CheckoutAction" method="execute">
      <result name="input">/checkout.jsp</result>
      <result name="success">/order_confirmation.jsp</result>
    </action>

    <action name="login" class="actions.LoginAction">
      <result name="input">/login.jsp</result>
      <result name="success" type="redirect">Home.jsp</result>
    </action>

    <action name="register" class="actions.RegisterAction">
      <result name="input">/register.jsp</result>
      <result name="success">/login.jsp</result>
    </action>

    <action name="logout" class="actions.LogoutAction">
      <result name="success" type="redirect">Home.jsp</result>
    </action>

    <action name="products" class="actions.ProductAction">
      <result name="success">/product_list.jsp</result>
    </action>

    <action name="cart" class="actions.CartAction">
      <result name="success">/cart.jsp</result>
    </action>

    <action name="addToCart" class="actions.AddToCartAction">
      <result name="success" type="redirect">cart</result>
      <result name="error" type="redirect">products</result>
    </action>

    <action name="adminProductAction" class="actions.AdminProductAction">
      <result name="success" type="redirect">products</result>
      <result name="input">/product.jsp</result>
      <result name="form">/product.jsp</result>
      <result name="forbidden">/product_list.jsp</result>
      <result name="error" type="redirect">products</result>
    </action>

    <action name="profile" class="actions.ProfileAction">
      <result name="success">/user_profile_form.jsp</result>
      <result name="login" type="redirect">login</result>
    </action>
    <action name="profile-save" class="actions.ProfileAction" method="save">
      <result name="success" type="redirect">profile</result>
      <result name="input">/user_profile_form.jsp</result>
      <result name="login" type="redirect">login</result>
    </action>

  </package>
</struts>

